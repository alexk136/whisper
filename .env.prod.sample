# Production environment variables for Whisper Voice Auth
# Rename to .env.prod and use with docker-compose -f docker-compose.prod.yml --env-file .env.prod up -d

# API settings - CHANGE THESE!
WHISPER_API_KEY=complex-production-api-key-here

# Security - CHANGE THIS!
WHISPER_ENCRYPTION_KEY=your-production-encryption-key-here

# LLM integration - CONFIGURE THESE!
WHISPER_LLM_API_URL=https://your-production-llm-service/api/v1/process
WHISPER_LLM_API_KEY=your-production-llm-api-key-here

# Development mode - Keep as false for production
WHISPER_DEVELOPMENT_MODE=false
