# Sample environment file for Whisper Voice Auth
# Rename to .env and modify as needed

# API settings
WHISPER_API_KEY=your-secret-api-key-here

# Security
WHISPER_ENCRYPTION_KEY=your-encryption-key-here-32-bytes-long

# Server settings
PORT=8000
HOST=0.0.0.0
CONFIG_PATH=/app/config.yaml

# Storage paths
WHISPER_STORAGE_DIR=/app/storage
WHISPER_VOICEPRINT_DIR=/app/storage/voiceprints

# LLM integration
WHISPER_LLM_API_URL=http://your-llm-service/api/v1/process
WHISPER_LLM_API_KEY=your-llm-api-key

# Development mode
WHISPER_DEVELOPMENT_MODE=true
